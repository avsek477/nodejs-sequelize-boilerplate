{
  "name": "nodejs-boilerplate",
  "version": "1.0.0",
  "description": "Node js boilerplate for ESR tech",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "test": "nyc mocha ./test",
    "lint": "eslint .",
    "lint-fix": "npm run lint --fix",
    "pretest": "npm run lint"
  },
  "keywords": [
    "nodejs",
    "esr-tech"
  ],
  "author": "Abhishek Shrestha",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcrypt": "^5.0.0",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "connect-redis": "^4.0.3",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-content-length-validator": "^1.0.0",
    "express-device": "^0.4.2",
    "express-session": "^1.17.0",
    "express-validator": "^6.3.0",
    "geoip-lite": "^1.3.8",
    "helmet": "^3.21.2",
    "http-status": "^1.4.2",
    "joi": "^17.1.1",
    "limiter": "^1.1.4",
    "method-override": "^3.0.0",
    "pg": "^7.15.1",
    "pg-hstore": "^2.3.3",
    "redis": "^2.8.0",
    "redlock": "^4.1.0",
    "request": "^2.88.0",
    "request-ip": "^2.1.3",
    "sequelize": "^5.21.3",
    "useragent": "^2.3.0",
    "yamlparser": "0.0.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.4.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^6.11.0",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.2",
    "nyc": "^15.1.0",
    "sequelize-cli": "^6.2.0",
    "sinon": "^9.0.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "max-len": [
        2,
        135,
        4,
        {
          "ignoreUrls": true
        }
      ],
      "no-console": 0
    }
  },
  "eslintIgnore": [
    "node_modules"
  ]
}
